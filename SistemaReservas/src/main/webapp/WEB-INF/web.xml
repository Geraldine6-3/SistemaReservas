<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee" version="4.0">

    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>com.mycompany.sistemareservas.ReservaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/reservar</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListaReservasServlet</servlet-name>
        <servlet-class>com.mycompany.sistemareservas.ListaReservasServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListaReservasServlet</servlet-name>
        <url-pattern>/listarReservas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EliminarReservaServlet</servlet-name>
        <servlet-class>com.mycompany.sistemareservas.EliminarReservaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EliminarReservaServlet</servlet-name>
        <url-pattern>/eliminarReserva</url-pattern>
    </servlet-mapping>

</web-app>
